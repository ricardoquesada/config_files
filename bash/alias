#
# aliases
#

#Neovim
alias vim="nvim"

# easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"

# List only directories
alias lsd="ls -lF --color | grep --color=never '^d'"

# Function defined in "functions"
alias ef='_open_files_for_editing'     # 'ef' opens given file(s) for editing

# Find files
alias ff="find | grep"
alias ffi="find | grep -i"
